<div class="col-3 d-flex justify-content-center mx-auto flex-column mt-5">
    <%= simple_form_for(post) do |f| %>
    <%= f.input :photo, label: 'Photo de couverture' ,as: :file %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :name, label: 'Nom' %>
    <%= f.input :description%>
    <%= f.input :category, label: 'Catégorie' %>
    <%= f.submit  class: "btn btn-primary d-flex justify-center", style: 'width: 100%', label: 'Créer un post'%>
    <% end %>
    <!-- <button id="upload_widget" class="cloudinary-button">Upload files</button> -->
</div>

