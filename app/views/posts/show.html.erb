<% content_for :meta_title, "#{@posts.name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @posts.description %>
<div class="container mt-5">
    <% if user_signed_in? %>
    <h2 class="text-center postname">
        <%= @post.name %>
        <%= link_to post_path,
            method: :delete,
            data: { confirm: "Supprimer ce post ?" }  do %>
        <i class="fas fa-trash-alt" style="font-size: 20px;"></i>
        <% end %>
    </h2>
    <% else  %>
    <h2 class="text-center postname">
        <%= @post.name %>
    </h2>
    <% end %>
    <h3 class="text-center category">
        <%= @post.category %>
    </h3>
    <img class='cover' src="<%= cl_image_path @post.photo.key, class: :cover, crop: :crop %> " alt="">
    <div class="row p-5">
        <div style="margin-left: 8.33333333%" class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1 client">
            <h3>DESCRIPTION</h3>
            <div class="division"></div>
            <p class='grey-description'>
                <%= @post.description %>
            </p>
        </div>
    </div>
    <div class='contenu'>
        <% @post.photos.each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
    </div>
</div>
